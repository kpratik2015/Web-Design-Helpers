{
  "name": "nodejs-starter",
  "version": "1.0.0",
  "description": "A base for NodeJS projects",
  "main": "index.js",
  "scripts": {
    "docker:stop": "docker container stop webapp",
    "docker:remove": "docker container rm webapp",
    "docker:build": "docker build -t x/node-web-app .",
    "docker:run": "docker run -p 4005:4005 -d --name webapp x/node-web-app",
    "docker:run:dev": "docker run -p 4005:4005 -d -v \"/f/Github/Web-Design-Helpers/NodeJs Starter/\":/usr/src/app",
    "tsc": "tsc",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:prod": "webpack -p --config webpack.prod.js",
    "build:tsc": "npm run tsc",
    "build:tsc:watch": "npm run tsc -- --watch",
    "prestart": "echo making a fresh build... && npm run build",
    "start": "npm-run-all --parallel start:dev build:watch sync:watch sass:watch",
    "start:dev": "nodemon --exec \"node -r dotenv/config\" dist/app.js",
    "start:debug": "nodemon --inspect index.js",
    "start:tsdev": "ts-node-dev index.ts",
    "sync:watch": "browser-sync start -p localhost:4005 -w -f ./dist",
    "sass": "sass ./src/client/styles.sass ./src/client/styles.css",
    "sass:watch": "sass ./src/client/styles.sass ./src/client/styles.css",
    "sass:prod": "sass -q --no-source-map ./src/client/styles.sass ./src/client/styles.css",
    "pretest": "npm run sass && npm run build",
    "test": "mocha",
    "posttest": "rimraf dist"
  },
  "author": "Pratik Kataria",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "css-loader": "^3.4.2",
    "file-loader": "^5.0.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "rimraf": "^3.0.0",
    "style-loader": "^1.1.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2"
  }
}
